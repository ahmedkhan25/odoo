<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hello_gpt</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <form position="inside">
                <div class="app_settings_block" data-string="Hello GPT" string="Hello GPT" data-key="hello_gpt">
                    <h2>GPT API Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">OpenAI API Key</span>
                                <div class="text-muted">
                                    Enter your OpenAI API key here
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="openai_api_key" password="True"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </field>
    </record>
</odoo>