<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_gpt_query_form" model="ir.ui.view">
        <field name="name">gpt.query.form</field>
        <field name="model">hello_gpt.query</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="response"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_gpt_query" model="ir.actions.act_window">
        <field name="name">GPT Queries</field>
        <field name="res_model">hello_gpt.query</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_gpt_query" name="GPT Queries" action="action_gpt_query"/>
</odoo>